<?xml version="1.0" encoding="utf-8" ?>
<Batch
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns="clr-namespace:DbShell.Core;assembly=DbShell.Core"
    Connection="sqlserver://MultipleActiveResultSets=True;Data Source=localhost\SQLEXPRESS;Integrated Security=SSPI;Initial Catalog=Chinook"
    >
    <ForEach Source="{Tables}" Property="Table">
        <CopyTable>
            <CopyTable.Source>
                <Table Name="${Table.Name}" />
            </CopyTable.Source>
            <CopyTable.Target>
                <CdlFile Name="${Table.Name}.cdl"/>
            </CopyTable.Target>
        </CopyTable>
    </ForEach>
</Batch>    
