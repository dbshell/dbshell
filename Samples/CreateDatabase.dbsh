<?xml version="1.0" encoding="utf-8" ?>
<Batch 
  xmlns="http://schemas.dbshell.com/core"
  Requires="Configuration.dbsh"
>
  <!-- create database -->
  <Script Connection="${ConnectionNoDb}">
    <Script.Command>CREATE DATABASE ${DbName}</Script.Command>
  </Script> 
  
  <!-- fill database with sample data -->
  <Script Connection="${Connection}" File="Chinook.sql" />
  
  <Echo Message="Your samples database was succesfully created" />
</Batch>
